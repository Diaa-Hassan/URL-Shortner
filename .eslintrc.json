{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["prettier"],
	"rules": {
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
		"prettier/prettier": "error",
		"no-multi-spaces": "warn",
		"no-trailing-spaces": "warn",
		"no-case-declarations": "off",
		"no-unused-vars": "warn"
	}
}
